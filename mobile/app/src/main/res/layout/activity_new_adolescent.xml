<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adolescent_enrollment.NewAdolescentActivity">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:padding="@dimen/screen_horizontal_padding"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="@dimen/logo_size"
                android:layout_height="@dimen/logo_size"
                android:layout_margin="@dimen/item_vertical_spacing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="@color/color_200"
                    app:civ_border_width="1dp"
                    app:civ_shadow="true"
                    app:civ_shadow_color="@color/secondary_200"
                    app:civ_shadow_radius="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/edit_photo_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_image_ring"
                    android:baselineAlignBottom="true"
                    android:foreground="?android:selectableItemBackgroundBorderless"
                    android:src="@drawable/baseline_edit_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/pid_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header"
                tools:text="LC3002" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_type_of_visit"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/visit_type_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/visit_type_pilot_testing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pilot" />

                        <RadioButton
                            android:id="@+id/visit_type_initial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/initial" />

                        <RadioButton
                            android:id="@+id/visit_type_follow_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/follow_up" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/visit_type_error_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"

                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:text="Visit type is required."
                        tools:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/border_color" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_type_of_visit"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/check_up_reason_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/check_up_reason_services_research"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/y_check_services_research" />

                        <RadioButton
                            android:id="@+id/check_up_reason_services_only"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/y_check_services_only" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/check_up_reason_error_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:text="Please choose one"
                        tools:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/border_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/item_vertical_spacing"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pid"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/pid_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_rect_shape"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/text_color"
                        android:inputType="textPersonName"
                        android:padding="@dimen/text_small" />

                    <TextView
                        android:id="@+id/pid_error_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pid_is_required"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/surname"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/surname_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_rect_shape"
                        android:drawableStart="@drawable/baseline_person_24"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/text_color"
                        android:inputType="textPersonName"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/surname_error_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/surname_is_required"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other_names"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/other_names_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_rect_shape"
                        android:drawableStart="@drawable/baseline_person_24"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/text_color"
                        android:inputType="textPersonName"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/other_names_error_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other_names_are_required"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/border_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_of_birth"
                        android:textStyle="bold" />

                    <DatePicker
                        android:id="@+id/dob_picker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:calendarViewShown="false"
                        android:datePickerMode="spinner" />

                    <TextView
                        android:id="@+id/dob_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/invalid_age"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/border_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/select_type_of_adolescent"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/adolescent_type_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/adolescent_type_basic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/basic" />

                        <RadioButton
                            android:id="@+id/adolescent_type_secondary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/secondary" />

                        <RadioButton
                            android:id="@+id/adolescent_type_community"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/community" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/adolescent_type_error_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:text="Adolescent type is required."
                        tools:visibility="visible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginVertical="20dp"
                        android:background="@color/border_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lives_in_catchment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/leaves_in_catchment_area"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/lives_in_catchment_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/lives_in_catchment_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/lives_in_catchment_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no" />

                        <RadioButton
                            android:id="@+id/lives_in_catchment_na"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/n_a" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/lives_in_catchment_group_error_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="@string/please_choose_one"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginVertical="20dp"
                        android:background="@color/border_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sex"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/sex_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/sex_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/male" />

                        <RadioButton
                            android:id="@+id/sex_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/female" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/sex_error_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:text="Gender is required."
                        tools:visibility="visible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginVertical="20dp"
                        android:background="@color/border_color" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/school_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/which_school"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/school_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/round_rect_shape"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:id="@+id/school_error_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:text="Please select school."
                        tools:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/school_loading_process_bar"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/error_loading_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/school_loading_error"
                            android:textColor="@color/color_warning"
                            android:textSize="@dimen/error_text_size"
                            android:visibility="gone"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginVertical="20dp"
                        android:background="@color/border_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/residential_status_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/residential_status"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/residential_status_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/residential_status_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day" />

                        <RadioButton
                            android:id="@+id/residential_status_boarding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/boarding" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/residential_status_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:text="Choose residential status."
                        tools:visibility="visible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginVertical="20dp"
                        android:background="@color/border_color" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/grade_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/young_person_s_grade"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/grade_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/grade_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/grade_1" />

                        <RadioButton
                            android:id="@+id/grade_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/grade_2" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/grade_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:text="Choose grade."
                        tools:visibility="visible" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_marginVertical="20dp"
                        android:background="@color/border_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check_up_location"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/checkup_location_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="@drawable/round_rect_shape"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:id="@+id/checkup_location_error_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:text="Check-up location is required."
                        tools:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/location_loading_process_bar"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"
                            android:visibility="gone"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/error_loading_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location_loading_error"
                            android:textColor="@color/color_warning"
                            android:textSize="@dimen/error_text_size"
                            android:visibility="gone"
                            tools:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/border_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirmation_of_consent_form_received"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/icf_conf_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/icf_conf_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes_parental_consent" />

                        <RadioButton
                            android:id="@+id/icf_conf_adolescent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yes_adolescent_consent" />

                        <RadioButton
                            android:id="@+id/icf_conf_adolescent_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/adolescent_parent_consent" />

                        <RadioButton
                            android:id="@+id/icf_conf_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/icf_conf_error_message_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:text="@string/please_confirm_consent"
                        android:textAlignment="textStart"
                        android:textColor="@color/color_warning"
                        android:textSize="@dimen/error_text_size"
                        android:visibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginVertical="20dp"
                    android:background="@color/border_color" />

                <TextView
                    android:id="@+id/error_message_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/color_warning"
                    android:textSize="@dimen/error_text_size"
                    android:visibility="gone"
                    tools:text="Error message"
                    tools:visibility="visible" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/save_amp_continue"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:enabled="false" />

        <ProgressBar
            android:id="@+id/submit_adolescent_loading_process_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/invalid_form_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/form_is_not_valid"
            android:textAlignment="center"
            android:textColor="@color/color_warning"
            android:textSize="@dimen/error_text_size"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/submit_adolescent_loading_process_bar"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>