<resources>
    <!-- Base application theme. -->
    <style name="Theme.YCheck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_500</item>
        <item name="colorPrimaryVariant">@color/color_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_200</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.YCheck.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YCheck.TimeInput" parent="Theme.YCheck">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="colorSecondary">@color/color_500</item>
    </style>

</resources>